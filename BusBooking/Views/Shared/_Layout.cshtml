<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WeeTravels</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body style="background: linear-gradient(to right, #00c6ff, #0072ff);">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid d-flex align-items-center px-0">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Home", "User")" style="margin-left: 15px;">
                <img src="~/Content/Images/BusLogo2.png" alt="WeeTravels" style="width: 60px; height: 50px;" />
                <span class="ms-3 text-light">WeeTravels</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Home", "User", new { area = "" }, new { @class = "nav-link text-light" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About us", "About", "User", new { area = "" }, new { @class = "nav-link text-light" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Login", "User", new { area = "" }, new { @class = "nav-link text-light" })
                    </li>
                    <li class="nav-item text-light ms-3 d-flex align-items-center">
                        @Html.ActionLink("Sign up", "Signup", "User", new { area = "" }, new { @class = "btn btn-outline-light btn-sm" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Contact us", "Contact", "User", new { area = "" }, new { @class = "nav-link text-light" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-5">
        @RenderBody()
    </main>

    @*<footer class="bg-dark text-light text-center py-3 mt-auto mb-0">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - WeeTravels | All Rights Reserved</p>
        </div>
    </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
